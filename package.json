{
  "name": "niklick",
  "private": true,
  "scripts": {
    "postinstall": "cd client && yarn install",
    "lint-staged": "$(yarn bin)/lint-staged"
  },
  "lint-staged": {
    "frontend/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "assets/stylesheets/*.scss": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "dependencies": {
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-config-prettier": "^2.6.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "lint-staged": "^4.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.3",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0"
  }
}
